{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./components",
    "baseUrl": "src",
    "rootDir": "src/app/components",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2016",
      "dom"
    ]
  },
  "include": [
      "src/app/components/**/*"
  ]
}
