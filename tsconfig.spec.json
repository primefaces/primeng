{
    "extends": "./tsconfig.json",
    "compilerOptions": {
      "outDir": "./out-tsc/spec",
      "types": [
        "jasmine",
        "node"
      ],
      "resolveJsonModule": true,
      "allowSyntheticDefaultImports": true
    },
    "files": [
      "src/test.ts",
      "src/polyfills.ts"
    ],
    "include": [
      "src/**/*.spec.ts",
      "src/**/*.d.ts"
    ],
    "exclude": ["node_modules", "**/node_modules/*"]
  }
  
