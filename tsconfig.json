{
    "compilerOptions": {
        "target": "ES5",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "inlineSources": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "noImplicitAny": false,
        "declaration": true,
        "lib": ["dom","es6"]
    },
    "compileOnSave": false,
    "buildOnSave": false,
    "filesGlob" : [
        "**/*.ts",
        "!node_modules/**"
    ],
    "exclude": [
        "node_modules"
    ]
}